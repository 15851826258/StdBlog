@model  IEnumerable<StdBlog.Models.m_UserMes>

@{
    Layout = null;
}

<div class="panel panel-info ">
    <div class="panel-heading">
        Message box
    </div>
    <div class="panel-body">
        @foreach (var t in Model)
        {

            <div class="row">

                <div class="col-lg-2">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                    @ViewData["t" + t.senderid]
                </div>
                <div class="col-lg-2">
                    <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                    @t.time
                </div>
                <div class="col-lg-2">
                    <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
                    @Html.ActionLink("Reply", "sendmes", new { id = t.senderid })
                </div>
                <div class="col-lg-1 col-lg-push-5">
                    @using (Html.BeginForm("mesdel", "m_User", FormMethod.Post))
                    {
                        <button class="btn btn-default">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    }
                </div>
                <!--


                                    <script type="text/javascript">
                    function (t.Id)cboxClicked()() {
                        document.getElementById("cf(t.Id)").submit();
                        return true;
                    }
                </script>
                                    <button id="cbox" type="button" class="close" data-dismiss="alert" aria-label="Close"
                        onclick="@(t.Id)cboxClicked()">
                    <span aria-hidden="true">&times;</span>
                </button>

                    -->

            </div>
            <div class="row">
                <div class="col-lg-12">
                    <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                    @t.content
                </div>
            </div>
            <hr />
        }
    </div>

</div>
