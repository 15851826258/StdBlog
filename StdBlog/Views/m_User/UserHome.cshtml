
@{
    ViewBag.Title = "UserHome";
    Layout = "~/Views/m_User/_UserLayout.cshtml";
}

<h2>UserHome</h2>
<div>
    @Html.ActionLink("Create Blog", "CreateBlog", "m_Blog")
    @Html.ActionLink("Show list", "ShowList", "m_Blog")
</div>

@Styles.Render("~/Content/carousel.css")


<div style="position:absolute;width:100%;top:0px;left:0px;">
    <!--broadcast-->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                    <img class="first-slide" src="~/Content/pic/wb001.png" alt="First slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>如何写好一篇技术博客</h1>
                        <p><a class="btn btn-lg btn-primary" href="/Home/Pg_wb" role="button">Read</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="second-slide" src="~/Content/pic/btindex.png" alt="Second slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1></h1>
                        <p><a class="btn btn-lg btn-primary" href="http://getbootstrap.com/" role="button">Get bootstrap</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="third-slide" src="~/Content/pic/dnc001.png" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption">
                        <p><a class="btn btn-lg btn-primary" href="/Home/Pg_dnc" role="button">Learn More</a></p>
                    </div>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div><!-- /.carousel -->
    <div class="container">
        <div class="row" style="width:100%">
            <div class="col-lg-4">
                <img class="img-circle" src="~/Content/editors/1/jr.jpg" alt="Generic placeholder image" width="140" height="140">
                <div style="max-width:300px">
                    <h2>某人</h2>
                    <p>
                        Sans toi,les émotion d'aujourd'hui,ne seraient que la peau morte des émotion d'autre fois.
                    </p>
                    <p>
                        英雄联盟雷瑟守备·V血皇影风，欢迎加入我们工会。
                    </p>
                    <p>
                        御龙在天NO.1，我们一起作战吧。
                    </p>
                </div>

            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <img class="img-circle" src="~/Content/editors/2/QQ图片20170518111130.jpg" alt="Generic placeholder image" width="140" height="140">
                <div style="max-width:300px">
                    <h2>他并不想透露姓名</h2>
                    <p>
                        一面喜欢安稳，一面想要流浪。
                    </p>
                    <p>
                        我是不是小可爱你说
                    </p>
                </div>
            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <img class="img-circle" src="~/Content/editors/3/wxc.jpg" alt="Generic placeholder image" width="140" height="140">
                <div style="max-width:300px">
                    <h2>W.X.C</h2>
                    <p>
                        U look like my next mistake.
                    </p>
                    <p>
                        大爷来玩啊。
                    </p>
                    <p>
                        小可爱等你哦
                    </p>
                </div>
            </div><!-- /.col-lg-4 -->
        </div><!-- /.row -->

    </div>

    <div class="container">
        <!--recommend-->
        <h3>Recommend Blog</h3>
        <hr />
        @{Html.RenderAction("ShowBlog", "m_recblog");}
    </div>

    <hr />
    <footer class="footer">
        <div class="container">
            <p class="text-muted">&copy; @DateTime.Now.Year - Tsual Gwenix</p>
        </div>
    </footer>
</div>




