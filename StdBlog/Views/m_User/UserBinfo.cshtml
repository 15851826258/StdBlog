@model StdBlog.Models.m_User

@{
    ViewBag.Title = Model.name;
    Layout = "~/Views/m_User/_UserLayout.cshtml";
}


<div class="panel panel-info">
    <div class="panel-heading">
        <div class="row">
            <div class="col-lg-2">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                @Model.name
            </div>
            <div class="col-lg-6">
                <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
                @Html.ActionLink("Send message", "sendmes", new { id = Model.ID })
            </div>
        </div>

    </div>
    <div class="panel-footer">
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
        @if (Model.gender == StdBlog.Models.m_User.Gender.female)
        {@(new MvcHtmlString("Her blogs"))}
        @if (Model.gender == StdBlog.Models.m_User.Gender.male)
        {@(new MvcHtmlString("His blogs"))}
        @if (Model.gender == StdBlog.Models.m_User.Gender.secret)
        {@(new MvcHtmlString("xxx's blogs"))}
    </div>
    <div style="margin:30px;">
        @{Html.RenderAction("uShowList", "m_Blog", new { id = Model.ID });}
    </div>

    <div class="panel-footer">
        <a onclick="goback()">Back</a>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Send message to</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input placeholder="..." type="text" class="form-control" id="recipient-name">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function goback() {
        window.history.back(); location.reload();
    }
</script>
