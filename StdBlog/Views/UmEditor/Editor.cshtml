<!--UmEditor-->



    @using (Html.BeginForm("Exc", "Umeditor", FormMethod.Post, new { @class = "f-non", id = "f-non" }))
    {
        <div class="input-group" style="margin:20px">
            <span class="input-group-addon" id="basic-addon3">Title</span>
            <input placeholder="Input your title" class="form-control" id="title" name="title" type="text" />

        </div>
        <input class="i-non" id="info" name="info" type="hidden" />
    }
    <!--style给定宽度可以影响编辑器的最终宽度-->
    <script type="text/plain" id="myEditor" style="width:1000px;height:240px;">
        <p>快！在这写！</p>
    </script>
    <div style="margin:20px">
        <input class="btn btn-success" onclick="btn_esClicked()" value="Submit" />
        <input class="btn btn-warning" onclick="btn_erClicked()" value="Cancel" />
    </div>
    

    <script type="text/javascript">
        //实例化编辑器
        var um = UM.getEditor('myEditor');

        function btn_esClicked() {
            document.getElementById("info").value = UM.getEditor('myEditor').getContent();
            document.getElementById("f-non").submit();
        }
        function btn_erClicked() {
            window.history.back(); location.reload();
        }
    </script>
